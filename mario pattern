#include<stdio.h>
#include<cs50.h>
 
 int main()
 {
     int i,j,n;
      do{
         n=get_int("onlypositve"); 
      }while(n<0);
      
         
         
         for(i=0;i<=n;i++)
         {
             
             for(j=0;j<=n-i;j++)
             {
                 printf(" ");
                 
             }
             
             for(j=0;j<i;j++)
             {
                 
                 printf("#");
                 
             }
        printf("\n");
        
        
         }
      
 }
